import carla

# Verbindung zum CARLA-Server herstellen
client = carla.Client('localhost', 2000)
client.set_timeout(5.0)

# Weltobjekt abrufen
world = client.get_world()

# Eckpunkte des Rechtecks festlegen
rect_min = carla.Location(x=90.0, y=190.0, z=0.1)  # Untere linke Ecke, Koordinaten anpassen
rect_max = carla.Location(x=110.0, y=210.0, z=0.1)  # Obere rechte Ecke, Koordinaten anpassen

# Farbe des Rechtecks festlegen (Rot: RGB - 255, 0, 0)
rect_color = carla.Color(255, 0, 0)

# Dauer der Anzeige des Rechtecks festlegen (in Sekunden)
display_duration = 10.0  # Anpassen, wie lange das Rechteck sichtbar sein soll

# Rechteck auf den Boden zeichnen
world.debug.draw_debug_rectangle(
    rect_min,
    rect_max,
    rect_color,
    life_time=display_duration,
    thickness=0.1  # Dicke der Rechtecklinien anpassen
)

# Warten, um das Rechteck zu sehen (optional)
input("Dr√ºcken Sie Enter, um das Programm zu beenden...")
